<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="top|center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.arnav.mathplayroom.WelcomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MATH PLAYROOM"
        android:layout_marginTop="15sp"
        android:textStyle="bold"
        android:textSize="34sp"
        android:fontFamily="casual"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/additionButton"
        android:layout_marginTop="80sp"
        android:text="Addition Problems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="250sp"
        android:onClick="buttonClicked"/>

    <Button
        android:id="@+id/subtractionButton"
        android:text="Subtraction Problems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="250sp"
        android:layout_marginTop="15sp"
        android:onClick="buttonClicked"/>

    <Button
        android:id="@+id/multiplicationButton"
        android:text="Multiplication Problems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="250sp"
        android:layout_marginTop="15sp"
        android:onClick="buttonClicked"/>

    <Button
        android:text="Division Problems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="250sp"
        android:layout_marginTop="15sp"
        android:onClick="buttonClicked"/>

</LinearLayout>
