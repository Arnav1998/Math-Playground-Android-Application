<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:gravity="top|center"
    tools:context="com.arnav.mathplayroom.MultiplicationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Multiplication"
        android:layout_marginTop="15sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="34sp"
        android:fontFamily="casual"/>

    <TextView
        android:layout_marginTop="90sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select difficulty level:"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="casual"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="300sp"
        android:layout_marginTop="20sp"
        android:entries="@array/difficultyLevelArray"
        android:paddingLeft="140sp"/>

    <Button
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:width="200sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:text="Back"
        android:width="200sp"
        android:onClick="backButtonClickedForMultiplication"/>





</LinearLayout>
